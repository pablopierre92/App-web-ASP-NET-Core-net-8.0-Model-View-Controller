@model Vendedor

@{
	ViewData["Title"] = "Cadastrar Vendedor";
}



<div class="container p-5 rounded-5">

	<div class="mb-5 text-center">
		<h1>@ViewData["Title"]</h1>
	</div>

	<form method="post" asp-controler="Vendedores" asp-action="Cadastrar">
		

		<div class="mb-3">
			<label for="Nome" class="form-label">Nome</label>
			<input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="">
			<span class="text-danger" asp-validation-for="Nome"></span>
		</div>


		<div class="mb-3">
			<label for="Email" class="form-label">Email</label>
			<input type="text" class="form-control" asp-for="Email" id="Email" placeholder="">
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>

		<div class="mb-3">
			<label for="Data de Nascimento" class="form-label">Data de Nascimento</label>
			<input type="text" class="form-control" asp-for="DataNascimento" id="DataNascimento" placeholder="">
			<span class="text-danger" asp-validation-for="DataNascimento"></span>
		</div>

		<div class="mb-3">
			<label for="Salario" class="form-label">Salario</label>
			<input type="text" class="form-control" asp-for="Salario" id="Salario" placeholder="">
			<span class="text-danger" asp-validation-for="Salario"></span>
		</div>

		<div class="form-group">
			<label for="DepartamentoId" class="form-label">Departamento</label>
			<select asp-for="DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,"Id","Nome"))" class="form-control"></select>
			
		</div>

		<div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-success w-50">Adicionar</button>
			<a class="btn btn-primary w-50" asp-controller="Vendedores" asp-action="Index">Voltar</a>

		</div>



	</form>
</div>

