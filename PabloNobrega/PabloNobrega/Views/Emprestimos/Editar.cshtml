@model Emprestimo 

@{
    ViewData["Title"] = "Editar Empréstimo";
}

<div class="container p-5 rounded-5">

	<div class="mb-5 text-center">
		<h1>@ViewData["Title"]</h1>
	</div>

	<form method="post" asp-controler="Emprestimos" asp-action="Editar">
		<input type="hidden" asp-for="Id" />
		
		<div class="mb-3">
			<label for="Recebedor" class="form-label">Recebedor</label>
			<input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está revebendo o equipamento">
			<span class="text-danger" asp-validation-for="Recebedor"></span>
		</div>


		<div class="mb-3">
			<label for="Fornecedor" class="form-label">Fornecedor</label>
			<input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo">
			<span class="text-danger" asp-validation-for="Fornecedor"></span>
		</div>

		<div class="mb-3">
			<label for="Equipamento" class="form-label">Equipamento</label>
			<input type="text" class="form-control" asp-for="EquipamentoEmprestado" id="Equipamento" placeholder="Qual é o equipamento">
			<span class="text-danger" asp-validation-for="EquipamentoEmprestado"></span>
		</div>

		<div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-success w-50">Adicionar</button>
			<a class="btn btn-primary w-50" asp-controller="Emprestimos" asp-action="Index">Voltar</a>

		</div>



	</form>
</div>