@model IEnumerable<Emprestimo>

@{
    ViewData["Title"] = "Emprestimos";
}


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5"> 
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-success mx-2" asp-asp-controller="Emprestimos" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
    </div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Equipamento</th>
            <th scope="col">Útima Atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null){

            @foreach(var emprestimo in Model){
                <tr>
                    <th scope="row">@emprestimo.Recebedor</th>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.EquipamentoEmprestado</td>
                    <td>@emprestimo.DataUltimaAtualizacao</td>
                    <td>
                        <a asp-controller="Emprestimos" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Emprestimos" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        
        }
    </tbody>
</table>

</div>